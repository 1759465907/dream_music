.swiperTitleImage{
  width: 100%;
}

/* 标题部分 */
.titlesContainer{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  margin: 12px 0px;
}

.titleContainer{
  display: flex;
  width: 20%;
  flex-direction: column;
  justify-content:space-between;
  align-items: center;
}
.titleContainer text{
  font-size: 24rpx;
}

.iconfont{
  width: 100rpx;
  height:100rpx;  
  background-color:#66a8ec;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  font-size: 48rpx;
  color: white;
  margin-bottom: 15px;
} 


/* 歌曲推荐区域 */
.recommendContainer{
  padding: 20rpx;
}

.recommendCotent{
  margin: 15rpx 0rpx;
}

.scroll-view_H{
  white-space: nowrap;
  display: flex;
  height: 300rpx;
}

.scroll-view-item_H{ 
  width: 200rpx;
  height: 200rpx;
  white-space:normal;
  margin: 0px 8px;
}

.scrollImage{  
  width: 200rpx;
  height: 200rpx;
}

.scroll-view-item_H text{ 
  font-size: 24rpx;
  /* white-space:nowrap; */
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical; /* 表示盒子对象的子元素的排列方式 */
  -webkit-line-clamp: 2;/* 2行打点 */
}

.rankingListContainer{
  padding:20rpx;
}


/* 排行榜样式 */
.rankingListSwiper{
  min-height: 400rpx;
}

.rankingListContent{
  padding:20rpx;
}

.singleSwiperContainer{
  width: 96% !important;
  border:#fbfbfb;
}

.singleSwiperTitle{
  font-size: 30rpx;
  line-height: 80rpx;
}
.singleSwiperContent{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;

}
.ssItemImage{
  width: 100rpx;
  height:100rpx;
}
.ssItemIndex{
  width: 100rpx;
  height:100rpx;
  text-align: center; 
  line-height: 100rpx;
}
.ssItemText{
  height:100rpx;
  line-height: 100rpx;
  max-width: 380rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}